@model List<VirtualVistaHub.Models.User>

@{
    ViewBag.Title = "Users";
}

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Deleted</th>
            <th>User Level</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.Deleted</td>
                <td>
                    <form action="@Url.Action("ChangeUserLevel", "Staff")" method="post" class="form-inline user-level-form">
                        <input type="hidden" name="userId" value="@user.UserId" />
                        <select name="userlevel" class="form-control user-level-select" data-username="@user.FirstName @user.LastName" data-current-level="@user.Staff?.UserLevel" @(user.Staff?.UserLevel == "superadmin" ? "disabled" : "")>
                            <option value="None">None</option>
                            <option value="moderator" @(user.Staff?.UserLevel == "moderator" ? "selected" : "")>Moderator</option>
                            <option value="admin" @(user.Staff?.UserLevel == "admin" ? "selected" : "")>Admin</option>
                            <option value="superadmin" @(user.Staff?.UserLevel == "superadmin" ? "selected" : "")>SuperAdmin</option>
                        </select>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="confirmChangeModal" tabindex="-1" aria-labelledby="confirmChangeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmChangeModalLabel">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to change the user level for <span id="modalUserName"></span> to <span id="modalNewLevel"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmChangeBtn">Confirm</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var formToSubmit;

            $('.user-level-select').change(function () {
                var userName = $(this).data('username');
                var newLevel = $(this).find('option:selected').text();

                $('#modalUserName').text(userName);
                $('#modalNewLevel').text(newLevel);

                formToSubmit = $(this).closest('form');

                $('#confirmChangeModal').modal('show');
            });

            $('#confirmChangeBtn').click(function () {
                if (formToSubmit) {
                    formToSubmit.submit();
                }
            });
        });
    </script>
}
