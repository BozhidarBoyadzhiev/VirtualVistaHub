@model List<VirtualVistaHub.Models.Property>

<h2>Properties</h2>

<table class="table">
    <thead>
        <tr>
            <th>Type of Property</th>
            <th>District</th>
            <th>Price</th>
            <th>Area</th>
            <th>Type of Construction</th>
            <th>Phone Number</th>
            <th>Additional Information</th>
            <th>Approval Status</th>
            <th>Deleted</th>
            <th>Sold</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var property in Model)
        {
            <tr>
                <td>@property.TypeOfProperty</td>
                <td>@property.District</td>
                <td>@property.Price</td>
                <td>@property.Area</td>
                <td>@property.TypeOfConstruction</td>
                <td>@property.PhoneNumber</td>
                <td>@property.AdditionalInformation</td>
                <td>@property.ApprovalStatus</td>
                <td>@property.Deleted</td>
                <td>@property.Sold</td>
                <td>@property.User.FirstName</td>
                <td>@property.User.LastName</td>
                <td>
                    <a href="#" class="delete-link" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal" data-property-id="@property.PropertyId" data-table-name="@property.PropertyDetailsTable">Delete</a>
                    <a href="#" class="edit-link" data-user-id="@property.UserId" data-property-id="@property.PropertyId" data-table-name="@property.PropertyDetailsTable">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this property?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function () {
            var propertyId, tableName;

            $('.delete-link').click(function () {
                propertyId = $(this).data('property-id');
                tableName = $(this).data('table-name');
            });

            $('#confirmDeleteBtn').click(function () {
                window.location.href = '@Url.Action("DeleteProperty", "Staff")?propertyId=' + propertyId + '&tableName=' + tableName;
            });

            $('.edit-link').click(function () {
                userId = $(this).data('user-id');
                propertyId = $(this).data('property-id');
                tableName = $(this).data('table-name');
                window.location.href = '@Url.Action("EditProperty", "Property")?userId=' + userId + '&propertyId=' + propertyId + '&tableName=' + tableName;
            });

            @if (TempData["AlreadyDeleted"] != null && (bool)TempData["AlreadyDeleted"])
            {
                <text>
                    alert("This property has already been deleted.");
                </text>
            }
        });
    </script>
}
