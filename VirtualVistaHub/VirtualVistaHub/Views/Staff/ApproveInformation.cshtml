@model IEnumerable<VirtualVistaHub.Models.Property>

<h1 class="text-center">Одобряване на имот</h1>
<div class="container mt-4">
    <section>
        <div class="table-container" style="width: 120%;">
            <div class="d-flex justify-content-between mb-3">
                <div>
                    <label>
                        Show
                        <select class="form-select form-select-sm d-inline-block" style="width: auto;">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        entries
                    </label>
                </div>
            </div>
            <div class="table-responsive overflow-auto" style="overflow-y: scroll;">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.TypeOfProperty)</th>
                            <th>@Html.DisplayNameFor(model => model.District)</th>
                            <th>@Html.DisplayNameFor(model => model.Neighbourhood)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                            <th>@Html.DisplayNameFor(model => model.Area)</th>
                            <th>@Html.DisplayNameFor(model => model.TypeOfConstruction)</th>
                            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                            <th>@Html.DisplayNameFor(model => model.AdditionalInformation)</th>
                            <th>@Html.DisplayNameFor(model => model.User.FirstName)</th>
                            <th>@Html.DisplayNameFor(model => model.User.LastName)</th>
                            <th>Действие</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.TypeOfProperty)</td>
                                <td>@Html.DisplayFor(modelItem => item.District)</td>
                                <td>@Html.DisplayFor(modelItem => item.Neighbourhood)</td>
                                <td>@Html.DisplayFor(modelItem => item.Price) лв.</td>
                                <td>@Html.DisplayFor(modelItem => item.Area) кв. м.</td>
                                <td>@Html.DisplayFor(modelItem => item.TypeOfConstruction)</td>
                                <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                <td>@Html.DisplayFor(modelItem => item.AdditionalInformation)</td>
                                <td>@Html.DisplayFor(modelItem => item.User.FirstName)</td>
                                <td>@Html.DisplayFor(modelItem => item.User.LastName)</td>
                                <td style="width: 15%">
                                    <button onclick="window.location.href = '@Url.Action("ApproveVisuals", "Staff")?propertyId=@item.PropertyId&tableName=@item.PropertyDetailsTable'" class="btn btn-primary btn-block">Виж визуалната част</button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-between">
                <div>
                    Showing 1 to 10 of 10 entries
                </div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">4</a></li>
                        <li class="page-item"><a class="page-link" href="#">5</a></li>
                        <li class="page-item"><a class="page-link" href="#">6</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </section>
</div>
