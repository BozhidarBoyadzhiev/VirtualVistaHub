@model VirtualVistaHub.Models.PropertyDetailsTemplate

@{
    ViewBag.Title = "Visual";
}

<h2>Visual</h2>

@using (Html.BeginForm("Visual", "Property", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>PropertyDetailsTemplate</h4>
        <hr />

        <div class="form-group">
            @Html.LabelFor(model => model.VTour, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VTour, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.VTour, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Images, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="images" multiple class="form-control" accept="image/*" onchange="checkFileCount(this)" />
                @Html.ValidationMessageFor(model => model.Images, "", new { @class = "text-danger" })
                <small class="text-muted">You can upload up to 12 photos.</small>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    <script type="text/javascript">
        function checkFileCount(input) {
            if (input.files.length > 12) {
                alert("You can upload a maximum of 12 images.");
                input.value = "";
            }
        }
    </script>
}
