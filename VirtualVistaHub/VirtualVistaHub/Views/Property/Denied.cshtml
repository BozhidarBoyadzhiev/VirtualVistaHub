@model IEnumerable<VirtualVistaHub.Models.Property>

@{
    ViewBag.Title = "Not approved/denied";
}

<h2>Properties</h2>

<p>
    @Html.ActionLink("Create New", "Information", "Property")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfProperty)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApprovalStatus)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        bool denied = item.ApprovalStatus != "Not Approved";
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeOfProperty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApprovalStatus)
            </td>
            <td>
                @Html.ActionLink("Edit Property", "EditProperty", "Property", new { propertyId = item.PropertyId, tableName = item.PropertyDetailsTable, denied = denied }, null)
            </td>
        </tr>
    }
</table>
